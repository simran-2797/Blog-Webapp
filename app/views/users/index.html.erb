<h1 align="center">All Bloggers</h1>
<div align="center">
<div align = "center">
    <%= will_paginate%>
</div>
<% @users.each do |users| %>
<ul class="listing">
    <div class="row">
        <div class="well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(users), user_path(users) %></li>
            <li class="article-title">
            <%= link_to users.username, user_path(users) %></li>
            <li><small><%= pluralize(users.articles.count,"article") if users.articles %></small></li>
            <% if logged_in? and current_user.admin? %>
            <li><%= link_to "Delete", user_path(users), method: :delete, 
            data: { confirm: "Are you sure you want to delete the user?"}, class: "btn btn-xs btn-danger" %>
            <% end %>
        </div>
    </div>
</ul>
<% end %>
</div>
